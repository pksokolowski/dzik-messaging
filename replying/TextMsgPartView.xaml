<UserControl x:Class="Dzik.replying.TextMsgPartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dzik.replying"
             mc:Ignorable="d" Height="71" Width="310">
    <Grid Background="#FFCCCCCC" Margin="0,0,0,3">
        <CheckBox x:Name="msgPartCopiedCheckbox" Content="" Margin="288,26,0,26" Focusable="False" IsHitTestVisible="False" HorizontalAlignment="Left" Width="21"/>
        <Label x:Name="MsgPartLabel" Content="Text" Margin="10,4,90,37">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                    <GradientStop Color="Black" Offset="0.594"/>
                    <GradientStop Color="#FFCCCCCC" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Button x:Name="CopyButton" Content="Kopiuj" Margin="0,4,29,4" Click="CopyButton_Click" HorizontalAlignment="Right" Width="56"/>
        <Label x:Name="TypeAndLenLabel" Content="Text" Margin="10,36,90,4"/>

    </Grid>
</UserControl>
