<Window x:Class="Dzik.letter.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dzik.letter"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="210" Width="430" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}">

    <Border Style="{DynamicResource DzikBorderStyle}">
        <Grid>
            <Image Height="157" Margin="16,10,16,0" VerticalAlignment="Top" Source="/Icon1.ico"/>
            <ProgressBar Margin="10,0,10,8" Height="10" VerticalAlignment="Bottom" IsIndeterminate="True"/>


        </Grid>
    </Border>
</Window>
